{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchPackageNames": [
        "org.jetbrains.kotlinx:kotlinx-datetime"
      ],
      "allowedVersions": "!/\\-0\\.6\\.x\\-compat$/"
    }
  ],
  "ignoreDeps": [
    "com.android.application"
  ]
}
